# src/prodigal_automation/examples/.env.example

# Twitter API Credentials (OAuth 2.0 Client)
TWITTER_CLIENT_ID=YOUR_TWITTER_CLIENT_ID
TWITTER_CLIENT_SECRET=YOUR_TWITTER_CLIENT_SECRET

# Twitter API Credentials (OAuth 1.0a)
TWITTER_API_KEY=YOUR_TWITTER_API_KEY
TWITTER_API_SECRET=YOUR_TWITTER_API_SECRET
TWITTER_ACCESS_TOKEN=YOUR_TWITTER_ACCESS_TOKEN
TWITTER_ACCESS_TOKEN_SECRET=YOUR_TWITTER_ACCESS_TOKEN_SECRET

# Twitter API Credentials (Bearer Token)
TWITTER_BEARER_TOKEN=YOUR_TWITTER_BEARER_TOKEN

# Facebook API Credentials
# Get these from your Facebook Developer account:
# FACEBOOK_ACCESS_TOKEN: Your Page Access Token (long-lived recommended for automation)
# FACEBOOK_PAGE_ID: The numerical ID of your Facebook Page
FACEBOOK_ACCESS_TOKEN=YOUR_FACEBOOK_PAGE_ACCESS_TOKEN
FACEBOOK_PAGE_ID=YOUR_FACEBOOK_PAGE_ID
# Optional: App ID and App Secret might be needed for certain advanced features or authentication flows
# FACEBOOK_APP_ID=YOUR_FACEBOOK_APP_ID
# FACEBOOK_APP_SECRET=YOUR_FACEBOOK_APP_SECRET

# Gemini API Key
GEMINI_API_KEY=YOUR_GEMINI_API_KEY